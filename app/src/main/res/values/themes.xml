<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de la aplicación -->
    <style name="Theme.ProyectoVentas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primario de la marca (Azul) -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Color secundario de la marca -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Color de fondo -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Color de la barra de navegación -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>